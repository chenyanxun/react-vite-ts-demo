# http://editorconfig.org
# 用于停止EditorConfig插件在打开的文件是目录和每个父目录中查找名为.editorconfig的文件的动作.
root = true

# 对所有文件进行设置
[*]
# 字符集
charset = utf-8
# 缩进风格 space和tab
indent_style = tab
# 缩进大小
indent_size = 4
# 换行符 lf cr crlf
end_of_line = lf
# 结尾总是插入新的一行
insert_final_newline = true
# 结尾允许空格
trim_trailing_whitespace = true

# 对md文件进行设置
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
